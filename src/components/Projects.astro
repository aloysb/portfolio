---
import ProjectCard from './ProjectCard.astro';
import { FolderOpen } from 'lucide-astro';

const projects = [
  {
    title: "Lorem Ipsum Web Platform",
    description: "A modern web application built with React and TypeScript, featuring real-time collaboration and seamless user experience.",
    tags: ["React", "Node.js", "TypeScript"],
    imageUrl: "https://picsum.photos/id/234/1000/1000",
  },
  {
    title: "Dolor Sit Mobile App",
    description: "Cross-platform mobile application with offline capabilities and real-time synchronization across devices.",
    tags: ["React Native", "Firebase", "Redux"],
    imageUrl: "https://picsum.photos/id/235/1000/1000",
  },
  {
    title: "Consectetur E-commerce",
    description: "Full-stack e-commerce solution with integrated payments, inventory management, and analytics dashboard.",
    tags: ["Next.js", "Stripe", "PostgreSQL"],
    imageUrl: "https://picsum.photos/id/236/1000/1000",
  }
];

---

<section id="projects" class="py-32 relative">
  <!-- Subtle Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-white to-gray-50/30"></div>
  
  <div class="relative z-10 container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium mb-6">
        <FolderOpen class="w-4 h-4" />
        Recent Work
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Projects
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        A selection of my recent work and side projects
      </p>
    </div>
    
    <div class="flex flex-col gap-24">
      {projects.map((project, index) => (
        <ProjectCard {...project} isReversed={index % 2 === 1} />
      ))}
    </div>
    
  </div>
</section> 