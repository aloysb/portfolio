---
import { Heart, ArrowUp } from "lucide-astro";
import Button from "./Button.astro";

const currentYear = new Date().getFullYear();
---

<footer class="py-16 bg-gray-900">
  <div class="container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-12">
      <h3 class="text-3xl font-bold mb-4 text-white">
        Ready to bring your ideas to life?
      </h3>
      <p class="text-gray-300 mb-8 text-lg max-w-2xl mx-auto">
        Let's collaborate on your next project and create something amazing together.
      </p>
      <Button 
        text="Start a Conversation" 
        variant="solid" 
        size="lg" 
        href="#contact"
      >
        <ArrowUp class="w-5 h-5 rotate-45" slot="suffix" />
      </Button>
    </div>
    
    <!-- Footer Content -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <!-- About -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Aloys</h4>
        <p class="text-gray-400 leading-relaxed mb-4">
          Full Stack Developer passionate about creating digital experiences that make a difference.
        </p>
        <p class="text-gray-400 text-sm">
          üìç Sunshine Coast, Australia
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        <div class="space-y-2">
          <a href="#about" class="block text-gray-400 hover:text-white transition-colors">About</a>
          <a href="#blog" class="block text-gray-400 hover:text-white transition-colors">Blog</a>
          <a href="#testimonials" class="block text-gray-400 hover:text-white transition-colors">Testimonials</a>
          <a href="#contact" class="block text-gray-400 hover:text-white transition-colors">Contact</a>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Services</h4>
        <div class="space-y-2 text-sm">
          <p class="text-gray-400">Web Development</p>
          <p class="text-gray-400">API Development</p>
          <p class="text-gray-400">Technical Consulting</p>
          <p class="text-gray-400">Code Review</p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-gray-700 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm mb-4 md:mb-0 flex items-center gap-2">
        Made with <Heart class="w-4 h-4 text-red-400" /> on the Sunshine Coast by Aloys ‚Ä¢ {currentYear}
      </p>
      <Button 
        text="Back to top" 
        variant="link" 
        size="md"
        onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
        class="text-gray-400 hover:text-white text-sm shadow-none"
      >
        <ArrowUp class="w-4 h-4 group-hover:-translate-y-1 transition-transform" slot="suffix" />
      </Button>
    </div>
  </div>
</footer> 