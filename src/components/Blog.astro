---
import { FileText, Calendar, Clock } from "lucide-astro";
import Button from "./Button.astro";

// Placeholder blog posts - you can replace with real content later
const blogPosts = [
  {
    title: "Coming Soon: My Development Journey",
    excerpt: "Sharing insights about my path in full-stack development and lessons learned along the way.",
    date: "Coming Soon",
    readTime: "5 min",
    category: "Career"
  },
  {
    title: "Building Modern Web Applications",
    excerpt: "Exploring the tools and techniques I use to create scalable, maintainable applications.",
    date: "Coming Soon",
    readTime: "7 min", 
    category: "Development"
  },
  {
    title: "From Idea to Production",
    excerpt: "A deep dive into my process for taking projects from concept to deployed applications.",
    date: "Coming Soon",
    readTime: "10 min",
    category: "Process"
  }
];
---

<section id="blog" class="py-32 relative">
  <!-- Subtle Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-gray-50/30 to-white"></div>
  
  <div class="relative z-10 container mx-auto px-4 max-w-6xl">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium mb-6">
        <FileText class="w-4 h-4" />
        Latest Writing
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Blog
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Thoughts on development, technology, and building great products
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {blogPosts.map((post, index) => (
        <article class="group bg-white border border-gray-100 rounded-2xl p-8 hover:border-gray-300 hover:shadow-lg transition-all duration-300 cursor-pointer flex flex-col h-full">
          <div class="flex items-center gap-4 mb-4">
            <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full">
              {post.category}
            </span>
            <div class="flex items-center gap-1 text-gray-500 text-sm">
              <Clock class="w-3 h-3" />
              {post.readTime}
            </div>
          </div>
          
          <h3 class="text-xl font-semibold mb-3 text-gray-900 group-hover:text-gray-700 transition-colors">
            {post.title}
          </h3>
          
          <p class="text-gray-600 leading-relaxed mb-4 flex-grow">
            {post.excerpt}
          </p>
          
          <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
            <div class="flex items-center gap-2 text-gray-500 text-sm">
              <Calendar class="w-4 h-4" />
              {post.date}
            </div>
            <div class="text-gray-700 font-medium text-sm group-hover:translate-x-1 transition-transform">
              Read more â†’
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <div class="text-center bg-gray-50 rounded-2xl p-12 border border-gray-200">
      <div class="max-w-2xl mx-auto">
        <h3 class="text-2xl font-semibold mb-4 text-gray-900">
          Blog Coming Soon
        </h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          I'm setting up my blog to share insights about development, technology, and building digital products. 
          Subscribe to get notified when the first posts go live!
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-3 max-w-sm mx-auto">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-4 py-2 bg-white border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent"
          />
          <Button 
            text="Notify Me" 
            variant="solid" 
            size="sm"
          />
        </div>
      </div>
    </div>
  </div>
</section>