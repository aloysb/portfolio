---
import { Star, Quote } from "lucide-astro";

interface Testimonial {
  quote: string;
  author: string;
  role?: string;
  rating: number;
}

const testimonials: Testimonial[] = [
  {
    quote: "Aloys is a true professional. Amazing communication skills, flexible and always helpful. This was an amazing experience for me and a talent I will be glad to work with again.",
    author: "Anonymous Client",
    role: "Startup Founder",
    rating: 5
  },
  {
    quote: "Excellent job! Aloys delivered a very good work on this website development project. His availability and communication were great. His recommendations and skills were very good and all deadlines were met.",
    author: "Anonymous Client", 
    role: "Project Manager",
    rating: 5
  },
  {
    quote: "I highly recommend Aloys for web development. He codes fast and with care to details. This was my second job with him and I'll hire him again in the future.",
    author: "Anonymous Client",
    role: "Business Owner",
    rating: 5
  },
  {
    quote: "Excellent advices and project follow-up for the creation of an e-commerce website in a short deadline. His synthesis document to select the best technical solutions was high quality.",
    author: "Anonymous Client",
    role: "E-commerce Director",
    rating: 5
  },
  {
    quote: "I highly recommend Aloys. He writes clean & fast code, and never had any issues with him. I'm planning to hire him again.",
    author: "Anonymous Client",
    role: "Tech Lead",
    rating: 5
  },
  {
    quote: "One additional job with Aloys. Once again he made a great job to update a website. As always, his communication and availability were perfect.",
    author: "Anonymous Client",
    role: "Marketing Manager",
    rating: 5
  }
];
---

<section id="testimonials" class="py-32 relative">
  <!-- Subtle Background -->
  <div class="absolute inset-0 bg-gray-50"></div>
  
  <div class="relative z-10 container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-full text-sm font-medium mb-6">
        <Quote class="w-4 h-4 text-gray-600" />
        Client Feedback
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900">
        Testimonials
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        What clients say about working with me
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {testimonials.map((testimonial, index) => (
        <div class="group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 flex flex-col h-full">
          <!-- Rating Stars -->
          <div class="flex items-center gap-1 mb-4">
            {Array.from({ length: testimonial.rating }, (_, i) => (
              <Star class="w-4 h-4 text-yellow-500 fill-current" />
            ))}
          </div>
          
          <!-- Quote -->
          <blockquote class="text-gray-700 leading-relaxed mb-6 relative flex-grow">
            <Quote class="absolute -top-2 -left-2 w-6 h-6 text-gray-200" />
            <p class="relative z-10 pl-4">
              {testimonial.quote}
            </p>
          </blockquote>
          
          <!-- Author -->
          <div class="flex items-center gap-3 mt-auto">
            <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center text-gray-700 font-semibold text-sm">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              {testimonial.role && (
                <p class="text-sm text-gray-500">{testimonial.role}</p>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 